<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent">

    <android.support.design.widget.CoordinatorLayout
        style="@style/MatchParent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            style="@style/WrapContent.WidthMatchParent"
            android:background="@color/transparent"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                style="@style/WrapContent.WidthMatchParent"
                android:fitsSystemWindows="true"
                android:minHeight="?actionBarSize"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/iv_head_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/head_logo"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.9" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/rv_start_activity"
            style="@style/MatchParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <Button
                android:id="@+id/wel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tiaozhuan" />

            <Button
                android:id="@+id/wel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
            <Button
                android:id="@+id/wel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="butterknife" />
            <Button
                android:id="@+id/wel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="配置文件实现网络请求" />
            <Button
                android:id="@+id/wel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="各种网络图片加载" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <!--标题-->
    <LinearLayout
    android:id="@+id/toolbar_root"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:layout_alignParentTop="true"
    android:background="?colorPrimary">

    <ImageView
        android:id="@+id/iv_toolbar_head"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:src="@mipmap/ic_launcher" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/transparent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:subtitle="nohtttp"
        app:subtitleTextColor="@color/white"
        app:title="@string/app_name"
        app:titleTextColor="@color/white" />
</LinearLayout>

</RelativeLayout>
